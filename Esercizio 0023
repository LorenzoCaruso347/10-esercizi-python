def arrotonda_numero(n):
    # La funzione round() arrotonda all'intero più vicino
    # In Python 3, round() restituisce già un tipo 'int' se non si specificano decimali
    risultato = round(n)
    
    # Per sicurezza esplicita, ci assicuriamo che sia un intero
    return int(risultato)

# Esempi di test
print(arrotonda_numero(4.6))  # Output: 5
print(arrotonda_numero(4.3))  # Output: 4
print(arrotonda_numero(4.5))  # Output: 4 (Nota: Python usa il "Banker's rounding", vedi sotto)
